[Unit]
Description = isucon6 qualifier worker in perl

[Service]
WorkingDirectory=/home/isucon/webapp/perl
EnvironmentFile=/home/isucon/env.sh
Environment=PLACK_ENV=production

ExecStart = /home/isucon/.local/perl/bin/carton exec -- perl worker.pl

Restart   = always
Type      = simple
User      = isucon
Group     = isucon

[Install]
WantedBy = multi-user.target
